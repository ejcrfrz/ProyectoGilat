<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/buenas_tardes_4"
    tools:context=".RegisterActivity"
    android:id="@+id/container"
    >


    <TextView
        android:id="@+id/tv_time_msg"
        android:layout_width="246dp"
        android:layout_height="99dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/kalam_bold"
        android:gravity="center"
        android:text="Registro"
        android:textColor="#FFFFFF"
        android:textSize="46sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:fontFamily="@font/contrail_one"
        android:text="Gilat Peru"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_registrar_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button_white"
        android:fontFamily="@font/contrail_one"
        android:text="Registrar"
        android:textColor="#FFFFFF"

        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reg_pass_c"
        app:layout_constraintVertical_bias="0.393" />

    <EditText
        android:id="@+id/in_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/contrail_one"
        android:hint="Contraseña"
        android:inputType="textPersonName"
        android:password="true"
        android:textColor="#FFFFFF"
        android:textColorHint="#FBFBFB"
        android:textColorLink="#EFEFEF"
        app:layout_constraintBottom_toTopOf="@+id/reg_pass_c"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.568"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_time_msg"
        app:layout_constraintVertical_bias="0.818" />

    <EditText
        android:id="@+id/reg_pass_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/contrail_one"
        android:hint="Rep-contraseña"
        android:inputType="textPersonName"
        android:password="true"
        android:textColor="#FFFFFF"
        android:textColorHint="#FBFBFB"
        android:textColorLink="#EFEFEF"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.563"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_time_msg"
        app:layout_constraintVertical_bias="0.643" />

    <EditText
        android:id="@+id/in_correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/contrail_one"
        android:hint="Correo"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="#FBFBFB"
        android:textColorLink="#EFEFEF"
        app:layout_constraintBottom_toTopOf="@+id/in_pass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.568"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reg_nombre"
        app:layout_constraintVertical_bias="0.484" />

    <EditText
        android:id="@+id/reg_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/contrail_one"
        android:hint="Nombre"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="#FBFBFB"
        android:textColorLink="#EFEFEF"
        app:layout_constraintBottom_toTopOf="@+id/in_pass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.568"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_time_msg"
        app:layout_constraintVertical_bias="0.143" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="44dp"
        android:layout_height="37dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_key"
        app:layout_constraintBottom_toBottomOf="@+id/in_pass"
        app:layout_constraintEnd_toStartOf="@+id/in_pass"
        app:layout_constraintTop_toTopOf="@+id/in_pass"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="43dp"
        android:layout_height="38dp"
        android:src="@drawable/ic_key"
        app:layout_constraintBottom_toBottomOf="@+id/reg_pass_c"
        app:layout_constraintEnd_toStartOf="@+id/reg_pass_c"
        app:layout_constraintHorizontal_bias="0.953"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/reg_pass_c"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="48dp"
        android:layout_height="41dp"
        android:src="@drawable/ic_mail"
        app:layout_constraintBottom_toBottomOf="@+id/in_correo"
        app:layout_constraintEnd_toStartOf="@+id/in_correo"
        app:layout_constraintHorizontal_bias="0.983"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/in_correo"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="46dp"
        android:layout_height="44dp"
        android:src="@drawable/ic_username"
        app:layout_constraintBottom_toBottomOf="@+id/reg_nombre"
        app:layout_constraintEnd_toStartOf="@+id/reg_nombre"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/reg_nombre"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/volver"
        android:layout_width="55dp"
        android:layout_height="20dp"
        android:layout_marginBottom="72dp"
        android:background="@drawable/bg_button_forgot"
        android:fontFamily="@font/contrail_one"
        android:onClick="volver"
        android:text="Volver"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_registrar_a"
        app:layout_constraintVertical_bias="0.923" />


</androidx.constraintlayout.widget.ConstraintLayout>